# this file holds all info for the odkoc-tool to function
# information should be provided as key - value pairs, separated by a space
# lines with more than two elements will be ignored, as will be empty lines

# General parameters
sleep_this_long 1
loop_this_long 00:00:01

# OpenClinica parameters
########################
oc4_username xx
oc4_password xx!
autApiUrl https://xx.build.openclinica.io
apiUrl https://xx.openclinica.io/OpenClinica
studyIdentifier xx
siteIdentifier xx
studyOid xx
studyEventOID xx

# some parameters for sending the log
#####################################
mail_enabled false
mail_server localhost
mail_from odkoc4@xx.com
mail_to xx@xx.com
mail_subject odkoc4-log

# postgresql database connection
################################
db_user odk_user
db_pass xx
db_name odk_prod
db_port 5432
db_host localhost

# same for housekeeping
db_util_user odk_user
db_util_pass xx
db_util_name odk_prod_util
db_util_port 5432
db_util_host localhost